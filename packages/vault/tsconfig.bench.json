{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2022",
    "strict": false,
    "skipLibCheck": true,
    "noEmitOnError": false,
    "declaration": false,
    "sourceMap": false,
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "experimentalDecorators": true,
    "pretty": false
  },
  "include": ["src/**/*", "benchmarks/**/*"],
  "exclude": ["node_modules", "dist", "tests"]
}
