{
  "name": "@ceryn/monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Ceryn monorepo - Zero-reflection TypeScript tools",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "test:cov": "npm run test:coverage --workspaces",
    "clean": "npm run clean --workspaces",
    "lint": "eslint 'packages/*/src/**/*.ts' 'packages/*/tests/**/*.ts'",
    "lint:fix": "eslint 'packages/*/src/**/*.ts' 'packages/*/tests/**/*.ts' --fix",
    "format": "prettier --write 'packages/*/src/**/*.ts' 'packages/*/tests/**/*.ts'",
    "format:check": "prettier --check 'packages/*/src/**/*.ts' 'packages/*/tests/**/*.ts'",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "check": "npm run typecheck && npm run lint && npm run format:check",
    "prepublishOnly": "npm run check && npm run test && npm run build",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^9.1.7",
    "inversify": "^7.10.3",
    "lint-staged": "^16.2.7",
    "memfs": "^4.49.0",
    "prettier": "^3.1.1",
    "reflect-metadata": "^0.2.2",
    "tinybench": "^5.0.1",
    "tsyringe": "^4.10.0",
    "typescript": "^5.3.3",
    "v8-natives": "^1.2.5"
  }
}
